@model Blogger.Models.PostCollection
@{
    ViewBag.Title = "Profile";
}


<div class="pull-left"><h2>@ViewBag.Title</h2> </div>
<br />
    <div class="pull-right ">
        <form asp-controller="Home" asp-action="NewPost"><button type="submit" class="btn btn-group-lg btn-lg btn-primary" ><span class="glyphicon glyphicon-plus"></span> </button></form>
  </div>
    <br /><br/><br/>
    <div>
            <ol>
                @foreach (Blogger.Models.Post post in Model.AllPosts.Reverse())
                {


                    <li>
                        @Html.ActionLink(post.Title, "SinglePost", "Post", new { id = post.PostId }) 
                        <a asp-action="SinglePost" asp-controller="Post"></a>

                        @Html.ActionLink("", "DeletePost", "Post",new { id = post.PostId }, new { @class = "btn btn-default btn-danger glyphicon glyphicon-trash" })

                    </li>
                }
  
            </ol>

        </>
    </div>


    <center>
        <a asp-controller="Manage" asp-action="Index" title="Manage">Manage Account</a>
    </center>




