@model Blogger.Models.PostCollection
@{
    ViewBag.Title = "Profile";
}


<div class="pull-left"><h2>@ViewBag.Title</h2> </div>
<br />
    <div class="pull-right ">
        <form asp-controller="Post" asp-action="NewPost"><button type="submit" class="btn btn-group-lg btn-lg btn-primary" ><span class="glyphicon glyphicon-plus"></span> </button></form>
  </div>
    <br /><br/><br/>
    <div>
            <ol>
                @foreach (Blogger.Models.Post post in Model.AllPosts.Reverse())
                {


                    <li>
                        @Html.ActionLink(post.Title, "SinglePost", "Post", new { id = post.PostId }) 
                      


                        <form asp-controller="Post" asp-action="DeletePost">
                            <button type="submit" class="btn btn-default btn-danger glyphicon glyphicon-trash"> </button>
                            <input name="id" value="@post.PostId" hidden />
                        </form>
                     
       
                    </li>
                }
  
            </ol>

        </>
    </div>


    <center>
        <a asp-controller="Manage" asp-action="Index" title="Manage">Manage Account</a>
    </center>




